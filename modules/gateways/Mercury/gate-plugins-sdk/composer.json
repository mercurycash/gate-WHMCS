{
    "name": "mercury-cash/sdk",
    "description": "PHP binding of the Mercury Cash",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://bitbucket.org/2vmodules/mercury-cash-sdk",
    "authors": [
        {
            "name": "Mikhail Domozhirov",
            "email": "michael@domozhirov.local"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2.5",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.1@dev"
